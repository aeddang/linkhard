<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/btnGo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_light"
        android:layout_marginBottom="@dimen/margin_light"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textTitle"
            android:layout_marginLeft="@dimen/margin_regular"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/font_regular"
             />
        <ImageButton
            android:id="@+id/btnCancel"
            android:layout_marginLeft="@dimen/margin_regular"
            android:layout_width="@dimen/icon_regular"
            android:layout_height="@dimen/icon_regular"
            android:tint="@color/colorPrimaryDark"
            android:src="@drawable/ic_pause"
            android:scaleType="fitCenter"
            android:background="@drawable/effect_circle_ripple"
            />
        <ImageButton
            android:id="@+id/btnRetry"
            android:layout_marginLeft="@dimen/margin_regular"
            android:layout_width="@dimen/icon_regular"
            android:layout_height="@dimen/icon_regular"
            android:tint="@color/colorPrimaryDark"
            android:src="@drawable/ic_refresh"
            android:scaleType="fitCenter"
            android:background="@drawable/effect_circle_ripple"
            />
        <ImageButton
            android:id="@+id/btnOpen"
            android:layout_marginLeft="@dimen/margin_regular"
            android:layout_width="@dimen/icon_regular"
            android:layout_height="@dimen/icon_regular"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_file"
            android:scaleType="fitCenter"
            android:background="@drawable/effect_circle_ripple"
            />
        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_marginLeft="@dimen/margin_regular"
            android:layout_width="@dimen/icon_regular"
            android:layout_height="@dimen/icon_regular"
            android:tint="@color/colorPrimaryDark"
            android:background="@drawable/effect_circle_ripple"
            android:src="@drawable/ic_delete"
            android:scaleType="fitCenter"
            />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_extra_thin"
        android:max="100"
        android:progressDrawable="@drawable/shape_progress" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryLight"/>

</LinearLayout>